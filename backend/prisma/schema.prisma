generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  name     String
  phone    String     @unique
  password String
  messages Messages[]
  Chat     Chat?      @relation(fields: [chatId], references: [id])
  chatId   String?
}

model Chat {
  id       String     @id @default(uuid())
  user     User[]
  Messages Messages[]
}

model Messages {
  id      String   @id @default(uuid())
  image   String?
  content String
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  created DateTime @default(now())
  seen    Boolean  @default(false)
  chat    Chat     @relation(fields: [chatId], references: [id])
  chatId  String
}
